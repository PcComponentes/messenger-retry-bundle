{
  "name": "pccomponentes/messenger-retry-bundle",
  "description": "Symfony Bundle for retry policy in Symfony Messenger",
  "license": "MIT",
  "type": "symfony-bundle",
  "authors": [
    {
      "name": "Fran Moraton",
      "email": "franciscoa.moraton@pccomponentes.com"
    },
    {
      "name": "Zoilo Mora",
      "email": "zoilo.mora@pccomponentes.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "PcComponentes\\MessengerRetryBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PcComponentes\\MessengerRetryBundle\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "pccomponentes/ddd": "^3.0",
    "symfony/framework-bundle": "^4.4|^5.0",
    "symfony/messenger": "^4.4|^5.0"
  },
  "require-dev": {
    "dg/bypass-finals": "^1.1",
    "pccomponentes/coding-standard": "^1.0",
    "phpunit/phpunit": "^9.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
